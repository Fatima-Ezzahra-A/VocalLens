<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Support for File Management and Document Browser -->
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
    <key>UISupportsDocumentBrowser</key>
    <true/>

    <!-- Permissions for Microphone Access -->
    <key>NSMicrophoneUsageDescription</key>
    <string>This app requires access to your microphone to record audio.</string>

    <!-- Permissions for Speech Recognition -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>This app requires access to speech recognition to transcribe audio into text.</string>

    <!-- Document Types -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Audio File</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.audio</string>
            </array>
        </dict>
    </array>

    <!-- URL Schemes -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.yourcompany.recordingapp</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>recordingapp</string>
            </array>
        </dict>
    </array>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>

    <!-- Additional Keys for Speech Recognition (Speech Framework Support) -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>microphone</string>
        <string>armv7</string>
    </array>
</dict>
</plist>

